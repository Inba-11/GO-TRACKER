FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy application code
COPY . .

# Build application
RUN npm run build

# Expose port
EXPOSE 8084

# Start development server (for production, use a proper web server)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "8084"]
